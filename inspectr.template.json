{
  "project_name": "My Project",

  "reporters": [
    {
      "type": "flake8",
      "command": "flake8 apps/"
    },
    {
      "type": "unittest",
      "command": "manage.py test"
    },
    {
      "type": "coverage-py",
      "command": "coverage report"
    },
    {
	"type": "pytest",
	"command": "coverage run -m py.test"
    },
    {
      "type": "eslint",
	  "command": "eslint src/"
    },
    {
    	"type": "jasmine",
	    "command": "karma start karma.conf.js --single-run"
    },
    {
	    "type": "karma-coverage",
	    "command": null
    }
  ]
}